---
import SmolContainer from "../components/SmolContainer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Postcards</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Postcards from Friends"
      href={new URL("rss.xml", Astro.site)}
    />
  </head>
  <body class="u-playfair-display">
    <slot />

    <footer>
      <SmolContainer>
        <div class="footer__text">
          A micro-site by <a href="mitchellbusby.com">Mitchell Busby</a>
        </div>
      </SmolContainer>
    </footer>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }

    /**
	Basic CSS
	 */

    * {
      box-sizing: border-box;
      margin: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      padding: 5vh clamp(1rem, 5vw, 3rem) 1rem;
      /* font-family: system-ui, sans-serif; */
      line-height: 1.5;
      color: #222;
      font-size: 20px;
      background: #ffc4dc;
    }

    body > * {
      --layout-spacing: max(8vh, 3rem);
      --max-width: 70ch;
      width: min(100%, var(--max-width));
      margin-left: auto;
      margin-right: auto;
    }

    main {
      margin-top: var(--layout-spacing);
    }

    footer {
      margin-top: auto;
      padding-top: var(--layout-spacing);
    }

    footer p {
      border-top: 1px solid #ccc;
      padding-top: 0.25em;
      font-size: 0.9rem;
      color: #767676;
    }

    :is(h1, h2, h3) {
      line-height: 1.2;
    }

    :is(h2, h3):not(:first-child) {
      margin-top: 2em;
    }

    article * + * {
      margin-top: 1em;
    }

    body {
      font-family: "Playfair Display", serif;
      font-optical-sizing: auto;
      font-weight: 400;
      font-style: normal;
    }
  </style>
  <style is:global>
    a {
      color: black;
      text-underline-offset: 0.15em;
    }
  </style>
  <style>
    .footer__text {
      text-align: center;
      padding-bottom: var(--layout-spacing);
    }
  </style>
</html>
